<article class="post">
  <div class="title">
    <a href="{{post_url}}" target="_blank">{{title}}</a>
    <span>({{post_url}})</span>
  </div>
  <div class="meta">
    {{vote_count}} upvote(s) by {{user.username}} on
    {{created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} Make/View comment(s)</a>
  </div>
</article>